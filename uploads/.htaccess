# Protección del directorio de uploads
# Permitir solo lectura de imágenes, NO ejecución de PHP

<FilesMatch "\.(php|phtml|php3|php4|php5|php7|php8|phar)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Permitir solo tipos de imagen
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
